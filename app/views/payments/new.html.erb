<div class="lg-container payment-card p-3">
  <h1>Checkout summary</h1>
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
          <%= cl_image_tag @order.product.photo.key, class: "product-photo" %>
        </div>

        <div class="col-12 col-md-6 col-lg-6">
          <h4>Purchase of <strong><%= @order.product.name %></strong> for <strong><%= humanized_money_with_symbol @order.product.price %></strong></h4>
          <% if @order.delivery == "delivery" %>  
            <p>Delivery Cost: </p>
          <% end %>
          <hr>
          <h4>Total: <strong><%= humanized_money_with_symbol @order.amount %></strong></h4>
          <%= image_tag "qrcode.jpg", class: "qrcode" %>
          <button id="pay" class="btn btn-primary">Credit Card Payment</button>  
        </div>
      </div>
    </div>
    <script src="https://js.stripe.com/v3/"></script>
      
    <script>
      const paymentButton = document.getElementById('pay');
      paymentButton.addEventListener('click', () => {
        const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
        stripe.redirectToCheckout({
          sessionId: '<%= @order.checkout_session_id %>'
        });
      });
    </script>
</div>